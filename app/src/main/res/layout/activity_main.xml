<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">


    <TextView
        android:id="@+id/txtInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/txtOutput"
        android:gravity="right"
        android:paddingRight="10dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/txtOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/llOne"
        android:gravity="right"
        android:paddingRight="10dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="100dp" />


    <LinearLayout
        android:id="@+id/llOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/btnAC"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_ac" />

            <ImageView
                android:id="@+id/btnDivide"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_divide" />

            <ImageView
                android:id="@+id/btnStartBracket"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_start_bracket" />

            <ImageView
                android:id="@+id/btnEndBracket"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_end_bracket" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/btnSeven"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_7" />

            <ImageView
                android:id="@+id/btnEight"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_8" />

            <ImageView
                android:id="@+id/btnNine"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_9" />

            <ImageView
                android:id="@+id/btnMultiplication"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_multiplication" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/btnFour"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_4" />

            <ImageView
                android:id="@+id/btnFive"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_5" />

            <ImageView
                android:id="@+id/btnSix"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_6" />

            <ImageView
                android:id="@+id/btnMinus"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_minus" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/btnOne"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_1" />

            <ImageView
                android:id="@+id/btnTwo"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_2" />

            <ImageView
                android:id="@+id/btnThree"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_3" />

            <ImageView
                android:id="@+id/btnPlus"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_plus" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_ac"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/btnZero"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_0" />

            <ImageView
                android:id="@+id/btnDot"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_dot" />

            <ImageView
                android:id="@+id/btnEquals"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_equal" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>